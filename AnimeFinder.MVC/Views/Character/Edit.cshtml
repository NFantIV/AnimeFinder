@model CharacterEdit

@{
    ViewData["Title"] = "Update A Character";
}

<h1>Edit A Character</h1>
<hr />

<div class="row>">
    <div class="col-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <form asp-action="Edit">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StrongestAttack" class="control-label"></label>
                <input asp-for="StrongestAttack" class="form-control" />
                <span asp-validation-for="StrongestAttack" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MainRival" class="control-label"></label>
                <input asp-for="MainRival" class="form-control" />
                <span asp-validation-for="MainRival" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <a asp-action="Index">Back To List</a>
        </div>
    </div>
</div>